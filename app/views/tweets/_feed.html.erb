<div class="column is-half">
    <% if user_signed_in? %>
        <article class="media box">
            <figure class="media-left">
                <p class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/64x64.png">
                </p>
            </figure>

            <div class="media-content">
                <%= render 'tweets/form' %>
            </div>
        </article>
    <% end %>

<% @tweets.each do |tw| %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/64x64.png">
                </figure>
            </div>

            <div class="media-content">
                <div class="content">
                    <strong><%= tw.user.name %></strong><br />
                    <small><%= tw.user.username %></small><br />
                    <p> <%= tw.tweet %> </p>
                </div>

                <% if user_signed_in? %>
                    <nav class="level">
                        <div class="level-left is-mobile">
                            <%= link_to tw, class: "level-item" do %>
                                <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                            <% end %>
                            <% if tw.user.username == current_user.username %>
                                <%= link_to edit_tweet_path(tw), class: "level-item" do %>
                                    <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                                <% end %>
                                <%= link_to tw, method: :delete, data: { confirm: "Are you sure you want to delete this tweet?"} do %>
                                    <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                                <% end %>
                            <% end %>
                        </div>
                    </nav>
                <% end %>
            </div>
        </article>
    </div>
<% end %>
</div>